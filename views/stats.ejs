<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
        integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <title>Url Shortner</title>
</head>

<body>
    <div class="container my-3 " style="text-align:center;overflow-x: auto;">
        <h1
            style="text-align:center;margin-top: 0px;padding-top:8px;padding-bottom:8px;width: 100%;background-color:#343a40;color: white">
            URL Shortner</h1>
        <br><br>
        <table class="table table-striped  table-hover" style="width: 80%;margin: auto;padding: 10%;">
            <thead class="thead-dark">
                <tr>
                    <th>Full URL</th>
                    <th>Short URL</th>
                    <th>Registered </th>
                    <th>Last Accessed </th>
                    <th>Total Clicks </th>

                </tr>
            </thead>
            <tbody>
                <% if(shortUrl){ %>
                <tr>
                    <td><a href="<%= shortUrl.full %>"><%= shortUrl.full %></a></td>
                    <td><a href="<%= shortUrl.short %>"><%= shortUrl.short %></a></td>
                    <td><%= shortUrl.createdAt %></td>
                    <td><%= shortUrl.updatedAt %></td>
                    <td><%= shortUrl.clicks %></td>
                </tr>
                <% } %>
            </tbody>
        </table>
        <footer>
            <P
                style="text-align:center;margin-bottom: 0px;padding-top:8px;padding-bottom:8px;  position: fixed;left: 0;bottom: 0;width: 100%;background-color: #242320;color: white">
                &copy;CREATED BY : ANGEL CHRISTIAN
            </P>
        </footer>
    </div>

</body>

</html>